{
  "name": "@adonisjs/static",
  "version": "1.0.1",
  "description": "Static file server for AdonisJS",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/stubs",
    "build/providers",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./static_middleware": "./build/src/static_middleware.js",
    "./static_provider": "./build/providers/static_provider.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run vscode:test",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:templates",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/cors",
    "vscode:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "static",
    "adonisjs",
    "static-middleware",
    "static-file-server"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^6.1.5-12",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@japa/assert": "^2.0.0-1",
    "@japa/file-system": "^2.0.0-1",
    "@japa/runner": "^3.0.0-6",
    "@swc/core": "^1.3.71",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "@types/serve-static": "^1.15.2",
    "@types/supertest": "^2.0.12",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.45.0",
    "fs-extra": "^11.1.1",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "serve-static": "^1.15.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-12"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      ".yalc/**"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "adonisjs": {
    "stubs": "./build/stubs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/static.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/static/issues"
  },
  "homepage": "https://github.com/adonisjs/static#readme",
  "prettier": "@adonisjs/prettier-config",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  }
}
